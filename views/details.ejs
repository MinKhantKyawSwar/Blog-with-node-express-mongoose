<%- include("./includes/head") %>
<section class="details">
  <div>
    <h1><%= post.title %></h1>
    <a href="/">Go Back</a>
  </div>
  <p class="tmp">Posted by : <%= post.userId.email %></p>
  <% if (date) {%>
  <p class="tmp">Uploaded at : <%= date %></p>
  <% } %>
  <img src="<%= post.imgUrl %>" alt="<%= post.title %>" />
  <hr />
  <p class="des"><%= post.description %></p>
  <% if (post.userId._id.toString() === currentLoginUserId.toString()) {%>
  <div class="login-div">
    <div>
      <form action="/admin/delete/<%= post._id %>" method="post">
        <input hidden value="<%= csrfToken %>" name="_csrf" />
        <button>Delete</button>
      </form>
      <a href="/admin/edit/<%= post._id %>" class="btn-full">Edit</a>
    </div>
  </div>

  <% } %>
</section>
<%- include("./includes/foot") %>
