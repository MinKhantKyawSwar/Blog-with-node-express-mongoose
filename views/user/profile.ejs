<%- include("../includes/head") %>
<section class="header">
    <div class="profile-top">
        <h1>Your Posts</h1>
        <p>
            <i class="fa-solid fa-circle-user"></i>
            <%= currentUserEmail %>
        </p>
    </div>
    <div class="post-container">
        <% for(let post of postsArr) { %>
        <div class="post-box">
        <img src="<%= '/' + post.imgUrl %>" alt="<%= post.title %>" class="post-box-img">
        <a class="post-title" href="/post/<%= post._id %>"><%= post.title.substr(0,30) %>...</a>
        <p class="post-des"><%= post.description.substr(0,80)%>...</p>
        <hr>
        <p class="post-email">posted by :<%= post.userId.email %></p>
        <hr />
        </div>
        <% } %>
    </div>
    <div class="paginate">
        <%if(hasNextPage){%>
        <a href="/admin/profile?page=<%= nextPage %>">Next Page(<%= nextPage %>)</a>
        <%}%>
        <%if(hasPreviousPage){%>
        <a href="/admin/profile?page=<%= previousPage %>">Previous Page(<%= previousPage %>)</a>
        <%}%>
    </div>
    </div>
</section>
<%- include("../includes/foot") %>
